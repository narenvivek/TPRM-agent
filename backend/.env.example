# ============================================================================
# TPRM Agent Backend Configuration
# ============================================================================

# Application Configuration
APP_NAME=TPRM Agent API
APP_VERSION=1.1.0
ENVIRONMENT=development  # development, staging, production
DEBUG=False

# Security Configuration
SECRET_KEY=change-me-in-production-use-strong-random-string
# Comma-separated list of allowed CORS origins
ALLOWED_ORIGINS=http://localhost:3000

# Airtable Configuration
# Get your Personal Access Token from: https://airtable.com/create/tokens
# Scopes required: data.records:read, data.records:write, schema.bases:read
AIRTABLE_API_KEY=pat...
# Get your Base ID from the URL of your base (starts with 'app')
AIRTABLE_BASE_ID=app...

# Gemini AI Configuration
# Get your API key from: https://aistudio.google.com/app/apikey
GEMINI_API_KEY=AIza...

# Storage Configuration
# Storage type: local, gcs (Google Cloud Storage)
STORAGE_TYPE=local
# Local storage path (used when STORAGE_TYPE=local)
STORAGE_PATH=./uploads
# Base URL for accessing uploaded files (for local storage)
BASE_URL=http://localhost:8000
# Maximum file size in bytes (default: 10MB)
MAX_FILE_SIZE=10485760

# Google Cloud Storage (optional, when STORAGE_TYPE=gcs)
# GCS_BUCKET_NAME=your-bucket-name
# GCS_PROJECT_ID=your-project-id
# GOOGLE_APPLICATION_CREDENTIALS=/path/to/credentials.json

# Rate Limiting
RATE_LIMIT_ENABLED=true

# Logging Configuration
LOG_LEVEL=INFO  # DEBUG, INFO, WARNING, ERROR, CRITICAL
AUDIT_LOG_ENABLED=true
